<link rel="stylesheet" href="/static/database.css">
<link rel="stylesheet" href="/static/table.css">
<link rel="stylesheet" href="/static/top.css">



<div class="topnav">
  <a href="/pilot">Pilot</a>
  <a href="/airline">Airline</a>
  <a href="/flight">Flight</a>
  <a href="/passenger">Passenger</a>
  <a href="/destination">Destination</a>
  <a href="/plane">Plane</a>
</div>
<div class="submissions"><h3>Pilots:</h3>

<form id = "addpilot" action="" method="post">
    Add new Pilot:<br>
      <input type="text" name="fname" value="First Name: "><br>
      <input type="text" name="lname" value="Last Name: "><br>
      
      <select name="employer"> 
        {{#each airlines}}
        <option value="{{name}}">{{name}}</option>
        {{/each}}
      </select><br>
      <select name="flight"> 
        {{#each flights}}
        <option value="{{airline_designator}}{{flight_number}}">{{airline_designator}}{{flight_number}}</option>
        {{/each}}
      </select>
      <input type="submit" value="Submit">
</form>
<br>
<br>


<form id='search_destinations' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search pilots by first name:<br>
    <input id='searchName' type='text' name='searchName' value='Search name'>
    <input type="button" value="Search" onclick="searchSQL('pilot')">
</form>
<br>
<br>


<form id='filter_people' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    Filter by employer<br>
    <select id='homeworld_filter' name="homeworld_filter"> 
        {{#each airlines}}
        <option value={{name}}>{{name}}</option>
        {{/each}}
    </select>
    <input type="button" value="Filter" onclick="filterSQL('pilot')">
</form></div>
<div><img src="https://images.pexels.com/photos/4610/stairs-people-airport-escalators.jpg?auto=compress&cs=tinysrgb&dpr=3&h=750&w=1260"></div>





<table>
    <thead> 
        <th>First Name</th> 
        <th>Last Name</th> 
        <th>Employer</th> 
        <th>Flight</th>  
        <th>Delete</th>  
    </thead> 
    <tbody>
        {{#each pilots}} 
        <tr> 
            <td>{{first_name}}</td> 
            <td>{{last_name}}</td> 
            <td>{{employer}}</td> 
            <td>{{flight}}</td> 
            <td><button onclick="deleteRow('pilot',{{id}})">Delete</button></td>
            <td><a class="update" href="/pilot/{{id}}">Update</a></td>
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
<a href = "/pilot">{{return}}</a>
</html>