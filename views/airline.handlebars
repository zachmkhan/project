<table>
    <thead> 
        <th>IATA Code</th>
        <th>Name</th> 
        <th>Terminal</th>
        <th>Delete</th>  
    </thead> 
    <tbody>
        {{#each airlines}} 
        <tr> 
            <td>{{IATA_code}}</td> 
            <td>{{name}}</td> 
            <td>{{departure_terminal}}</td>
            <td><button onclick="deleteRow('airline','{{IATA_code}}')">Delete</button></td>
            <td><a class="update" href="/airline/{{IATA_code}}">Update</a></td> 
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
