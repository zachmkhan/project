<h1>Update {{passenger.first_name}} {{passenger.last_name}} {{passenger.number_of_visits}} {{passenger.employer}} {{passenger.flight}}:</h1>
<form id="update-passenger" action="/passenger" method="post" onsubmit="return checkEmpty('first_name', 'last_name', 'number_of_visits')">
    First Name: <input type="text" name="first_name" id = "first_name" value="{{passenger.first_name}}"><br>
    Last Name: <input type="text" name="last_name" id = "last_name" value="{{passenger.last_name}}"><br>
    Number of Visits: <input type="text" name="number_of_visits" id = "number_of_visits" value="{{passenger.number_of_visits}}"><br>
    Flight: <select name="flight" id = "passenger-selector"> 
        {{#each flights}}
        <option value="{{airline_designator}}{{flight_number}}">{{airline_designator}}{{flight_number}}</option>
        {{/each}}
	<option value="NULL">No Flight</option>
      </select><br>
</form>
<button onclick="updateRow('passenger', {{passenger.id}})">Update</button>
<script defer>selector("{{passenger.flight}}", 'passenger');</script>